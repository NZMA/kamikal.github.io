<?php

	// print title if this is not empty
	if( !empty($post['title']) )
	{
		echo '<h2 class="post-title"><a href="'.Post::permalink().'">'.Post::title().'</a></h2>';

	}
	$month = Date::format($post['pub_date_unix'], '%m');
	$day = Date::format($post['pub_date_unix'], '%d');
	$year = Date::format($post['pub_date_unix'], '%Y');
	echo '<span class="publish-date">'.$day.'/'.$month.'/'.$year.'</span>';

?>